<div class="box wide">
  <p>
  <strong><%= t('.title') %> (<%= to_farsi_number(@user_count.to_s) %>)</strong>
  </p>

  <ul class="user_tree">
  <% @users.each do |user| %>
    <li>
      <a href="/u/<%= user.username %>"
        <% if !user.is_active? %>
          class="inactive_user"
        <% elsif user.is_new? %>
          class="new_user"
        <% end %>
        ><%= user.username %></a>
      <% if user.is_admin? %>
        <%= t('.administrator') %>
      <% else %>
        (<%= to_farsi_number(user.karma.to_s) %>)
        <% if user.is_moderator? %>
          <%= t('.moderator') %>
        <% end %>
      <% end %>
    </li>
  <% end %>
  </ul>
</div>
